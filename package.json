{
  "name": "node-typescript-boilerplate",
  "version": "1.0.0",
  "description": "A simple boilerplate for using node and typescript together.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "tsc": "tsc",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "prod": "rimraf ./build && tsc && node ./build/index.js",
    "clean": "rimraf ./build",
    "lint": "eslint src/**/*.ts"
  },
  "author": "Hemen Estefaie",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.21",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^23.0.0",
    "prettier": "^1.16.3",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "^3.3.1",
    "typescript-eslint-parser": "^22.0.0"
  }
}
